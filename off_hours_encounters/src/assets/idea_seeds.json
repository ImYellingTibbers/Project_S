{
  "schema": {
    "name": "idea_seed_library",
    "version": "1.0",
    "intended_use": "youtube_horror_shorts"
  },

  "global_guidance": {
    "creative_goal": "Generate horror ideas that feel grounded, human, and unsettling through subtle wrongness rather than spectacle.",
    "narrative_bias": "Ideas should naturally lead to first-person, spoken recollections that escalate through observation and repetition.",
    "shorts_fit": "Ideas must be understandable quickly, visually feasible, and capable of hooking within the first sentence of narration.",
    "avoidance": [
      "explicit monsters or entities",
      "lore or backstory",
      "complex transformations",
      "crowds or many characters",
      "resolution or explanation"
    ]
  },

  "seeds": [
    {
      "id": "subtle_presence",
      "theme": "the quiet sense that something is present without ever being seen",
      "fear_axis": "being accompanied or noticed",
      "perceptual_focus": "absence of evidence rather than visible threat",
      "tone": "restrained, conversational",
      "end_state": "lingering unease"
    },
    {
      "id": "reactive_space",
      "theme": "an ordinary environment subtly reacts to the protagonist’s movement or attention",
      "fear_axis": "loss of control",
      "perceptual_focus": "cause-and-effect that shouldn’t exist",
      "tone": "matter-of-fact rationalization",
      "end_state": "avoidance"
    },
    {
      "id": "timing_error",
      "theme": "normal timing feels slightly wrong or out of sync",
      "fear_axis": "anticipation and dread",
      "perceptual_focus": "small temporal inconsistencies",
      "tone": "observational",
      "end_state": "heightened vigilance"
    },
    {
      "id": "new_object",
      "theme": "something exists that the protagonist is certain was not there before",
      "fear_axis": "certainty breaking down",
      "perceptual_focus": "memory versus reality",
      "tone": "controlled disbelief",
      "end_state": "fixation"
    },
    {
      "id": "wrong_familiar",
      "theme": "a familiar place suddenly feels subtly wrong",
      "fear_axis": "uncanny familiarity",
      "perceptual_focus": "emotional mismatch with surroundings",
      "tone": "quiet unease",
      "end_state": "avoidance or discomfort"
    },
    {
      "id": "pattern_emerging",
      "theme": "a small repeating detail begins to feel intentional",
      "fear_axis": "implication",
      "perceptual_focus": "recognition of a rule",
      "tone": "analytical then unsettled",
      "end_state": "compulsion to notice"
    },
    {
      "id": "sound_without_source",
      "theme": "a persistent sound with no clear physical origin",
      "fear_axis": "invisible cause",
      "perceptual_focus": "listening and silence",
      "tone": "restrained concern",
      "end_state": "heightened awareness"
    },
    {
      "id": "distance_closing",
      "theme": "something consistently feels closer than it should be",
      "fear_axis": "approach without contact",
      "perceptual_focus": "shrinking space",
      "tone": "quiet tension",
      "end_state": "avoidance behavior"
    },
    {
      "id": "missing_expected",
      "theme": "something expected is missing, and its absence feels wrong",
      "fear_axis": "negative space",
      "perceptual_focus": "what is not there",
      "tone": "subdued confusion",
      "end_state": "unease"
    },
    {
      "id": "rules_noticed",
      "theme": "something follows a simple rule the protagonist slowly notices",
      "fear_axis": "implication without understanding",
      "perceptual_focus": "pattern recognition",
      "tone": "matter-of-fact",
      "end_state": "behavior change"
    },
    {
      "id": "peripheral_motion",
      "theme": "movement is only noticed indirectly or at the edge of awareness",
      "fear_axis": "unreliable perception",
      "perceptual_focus": "peripheral vision",
      "tone": "controlled unease",
      "end_state": "hyper-awareness"
    },
    {
      "id": "inconsistent_detail",
      "theme": "small details fail to remain consistent",
      "fear_axis": "loss of certainty",
      "perceptual_focus": "micro-changes",
      "tone": "quiet disbelief",
      "end_state": "fixation"
    },
    {
      "id": "silent_observer",
      "theme": "the feeling of being observed without any proof",
      "fear_axis": "intimacy invasion",
      "perceptual_focus": "attention without presence",
      "tone": "subdued tension",
      "end_state": "habit change"
    },
    {
      "id": "object_behaving_wrong",
      "theme": "a common object behaves slightly incorrectly",
      "fear_axis": "broken expectations",
      "perceptual_focus": "ordinary objects",
      "tone": "casual rationalization",
      "end_state": "avoidance"
    },
    {
      "id": "space_inconsistent",
      "theme": "a small space feels different depending on where the protagonist stands",
      "fear_axis": "environmental inconsistency",
      "perceptual_focus": "positional awareness",
      "tone": "observational",
      "end_state": "unease"
    },
    {
      "id": "unexplained_repetition",
      "theme": "something repeats without a clear reason",
      "fear_axis": "implication",
      "perceptual_focus": "repetition",
      "tone": "restrained concern",
      "end_state": "persistent discomfort"
    }
  ]
}
